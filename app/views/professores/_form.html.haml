= form_for @professor do |f|
  - if @professor.errors.any?
    #error_explanation
      %h2= "#{pluralize(@professor.errors.count, "error")} prohibited this professor from being saved:"
      %ul
        - @professor.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :nome
    = f.text_field :nome
  .field
    = f.label :cpf
    = f.number_field :cpf
  .field
    = f.label :telefone
    = f.number_field :telefone
  .field
    = f.label :endereco
    = f.text_field :endereco
  .actions
    = f.submit 'Salvar'
