= form_for @producao_cientifica do |f|
  - if @producao_cientifica.errors.any?
    #error_explanation
      %h2= "#{pluralize(@producao_cientifica.errors.count, "error")} prohibited this producao_cientifica from being saved:"
      %ul
        - @producao_cientifica.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :artigo
    = f.text_field :artigo
  .field
    = f.label :monografia
    = f.text_field :monografia
  .actions
    = f.submit 'Salvar'
