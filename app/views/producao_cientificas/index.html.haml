%h1 Lista Producao Cientifica

%table
  %tr
    %th Artigo
    %th Monografia
    %th
    %th
    %th

  - @producao_cientificas.each do |producao_cientifica|
    %tr
      %td= producao_cientifica.artigo
      %td= producao_cientifica.monografia
      %td= link_to 'Mostrar', producao_cientifica
      %td= link_to 'Editar', edit_producao_cientifica_path(producao_cientifica)
      %td= link_to 'Excluir', producao_cientifica, :method => :delete, :data => { :confirm => 'Tem certeza?' }

%br

= link_to 'Nova Producao cientifica', new_producao_cientifica_path

